<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.vehicle.business.module.Trip" table="bus_conf_trip">
        <id name="id" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="vehicleNumber" type="java.lang.String" column="vehicle_number"/>
        <property name="date" type="java.lang.String" column="date"/>
        <property name="status" type="java.lang.Integer" column="status"/>
        <property name="routeId" type="java.lang.Integer" column="route_id"/>
        <property name="seats" type="java.lang.Integer" column="seats"/>
    </class>

</hibernate-mapping>