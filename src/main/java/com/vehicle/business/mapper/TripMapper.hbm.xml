<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.vehicle.business.module.Trip">
        <id name="id" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="vehicleNumber" type="java.lang.String"/>
        <property name="date" type="java.io.Serializable"/>
        <property name="status" type="java.lang.Integer"/>
        <property name="routeId" type="java.lang.Integer"/>
        <property name="seats" type="java.lang.Integer"/>
    </class>

</hibernate-mapping>